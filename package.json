{
  "name": "rough-cut-mcp-e2e",
  "version": "5.5.0",
  "description": "Cross-platform MCP server for Remotion video creation with AI audio generation",
  "main": "build/index.js",
  "preferGlobal": true,
  "bin": {
    "rough-cut-setup": "./bin/rough-cut-setup",
    "rough-cut-build": "./bin/rough-cut-build", 
    "rough-cut-server": "./bin/rough-cut-server",
    "rough-cut-debug": "./bin/rough-cut-debug",
    "rough-cut-info": "./bin/rough-cut-info"
  },
  "files": [
    "build/",
    "bin/",
    "setup.js",
    "build.js",
    "debug.js",
    "info.js",
    "utils/",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "prebuild": "node -e \"if(process.platform==='linux'&&process.env.WSL_DISTRO_NAME){console.error('Build on Windows only!');process.exit(1)}\"",
    "build": "node build.js",
    "build:cross-platform": "node build.js",
    "build:windows": "powershell -File build-windows.ps1",
    "build:ts": "tsc",
    "start": "node build/index.js",
    "start:win": "cmd /c \"bash -c 'source ~/.nvm/nvm.sh && node build/index.js'\"",
    "start:wsl": "bash -lc \"source ~/.nvm/nvm.sh && node build/index.js\"",
    "setup": "node setup.js",
    "setup:cross-platform": "node setup.js",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File setup-windows.ps1",
    "dev": "node build.js && node build/index.js",
    "dev:ts": "tsc && node build/index.js",
    "test:env": "bash -c \"source ~/.nvm/nvm.sh && node --version && npm --version && npx --version\""
  },
  "keywords": ["mcp", "remotion", "video", "claude", "ai", "audio", "cross-platform"],
  "author": "endlessblink",
  "license": "MIT",
  "homepage": "https://github.com/endlessblink/rough-cut-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/endlessblink/rough-cut-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/endlessblink/rough-cut-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "fs-extra": "^11.2.0",
    "cross-env": "^7.0.3",
    "slash": "^3.0.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}