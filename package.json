    "@types/cross-spawn": "^6.0.6",
    "@types/fs-extra": "^11.0.0",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "c8": "^10.1.3",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
