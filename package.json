{
  "name": "rough-cut-mcp",
  "version": "9.5.0",
  "description": "Cross-platform MCP server for Remotion video creation with AI audio generation",
  "main": "build/index.js",
  "preferGlobal": true,
  "bin": {
    "rough-cut-setup": "./bin/rough-cut-setup",
    "rough-cut-build": "./bin/rough-cut-build",
    "rough-cut-server": "./bin/rough-cut-server",
    "rough-cut-debug": "./bin/rough-cut-debug",
    "rough-cut-info": "./bin/rough-cut-info"
  },
  "files": [
    "build/",
    "bin/",
    "scripts/",
    "utils/",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "prebuild": "node -e \"if(process.platform==='linux'&&process.env.WSL_DISTRO_NAME){console.error('Build on Windows only!');process.exit(1)}\"",
    "build": "node scripts/build.js",
    "build:cross-platform": "node scripts/build.js",
    "build:windows": "powershell -File build-windows.ps1",
    "build:ts": "tsc",
    "start": "node build/index.js",
    "start:win": "cmd /c \"bash -c 'source ~/.nvm/nvm.sh && node build/index.js'\"",
    "start:wsl": "bash -lc \"source ~/.nvm/nvm.sh && node build/index.js\"",
    "setup": "node scripts/setup.js",
    "setup:cross-platform": "node scripts/setup.js",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File setup-windows.ps1",
    "dev": "node scripts/build.js && node scripts/setup.js",
    "dev:ts": "tsc && node build/index.js",
    "test:env": "bash -c \"source ~/.nvm/nvm.sh && node --version && npm --version && npx --version\"",
    "tasks:watch": "node scripts/local-task-monitor.js",
    "tasks:watch:active": "node scripts/watch-tasks.js --filter=active",
    "tasks:watch:todo": "node scripts/watch-tasks.js --filter=todo",
    "tasks:watch:in-progress": "node scripts/watch-tasks.js --filter=in_progress",
    "tasks:watch:compact": "node scripts/watch-tasks.js --compact"
  },
  "keywords": [
    "mcp",
    "remotion",
    "video",
    "claude",
    "ai",
    "audio",
    "cross-platform"
  ],
  "author": "endlessblink",
  "license": "MIT",
  "homepage": "https://github.com/endlessblink/rough-cut-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/endlessblink/rough-cut-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/endlessblink/rough-cut-mcp/issues"
  },
  "dependencies": {
    "@babel/core": "^7.28.3",
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@babel/types": "^7.28.2",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.3",
    "slash": "^3.0.0"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.6.4",
    "@types/babel__parser": "^7.1.1",
    "@types/babel__traverse": "^7.20.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
