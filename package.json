{
  "name": "rough-cut-mcp",
  "version": "2.0.3",
  "description": "A robust cross-platform MCP server for rapid video creation integrating Remotion with AI voice generation, sound effects, and image generation. Primary support for Windows, experimental macOS compatibility.",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "clean-tsx": "node -e \"try { require('fs').unlinkSync('src/templates/animations.ts'); } catch {}\"",
    "prebuild": "node scripts/check-platform.js && npm run clean-tsx",
    "build": "tsc",
    "build:cross-platform": "node scripts/build.cjs",
    "build:dev": "npm run clean-tsx && tsc",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "clean": "node -e \"try { require('fs-extra').removeSync('build'); } catch {}\"",
    "prestart": "npm run build",
    "install-to-claude": "node install-to-claude.js",
    "studio": "cd assets/studio-project && npm start",
    "setup": "node install.js",
    "test": "node test/test-runner.cjs",
    "test:quick": "node test/test-runner.cjs",
    "test:verify": "node scripts/setup/verify-installation.cjs",
    "test:legacy": "node test-mcp-protocol.cjs",
    "test:integration": "npm run test:node-detection && npm run test:installation && npm run test:mcp-protocol",
    "test:node-detection": "node test/integration/node-detection.test.js",
    "test:installation": "node test/integration/installation.test.js", 
    "test:mcp-protocol": "node test/integration/mcp-protocol.test.js",
    "test:verdaccio": "node test/verdaccio-test.js",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "test:docker-standard": "docker-compose -f docker-compose.test.yml up test-node-standard --build",
    "test:docker-nvm": "docker-compose -f docker-compose.test.yml up test-node-nvm --build",
    "test:docker-volta": "docker-compose -f docker-compose.test.yml up test-node-volta --build",
    "test:vm": "vagrant up && vagrant ssh test-runner -c 'cd /vagrant && npm test'",
    "test:vm-windows10": "vagrant up win10-standard",
    "test:vm-windows11": "vagrant up win11-nvm",
    "test:emergency": "docker-compose -f test-environments/windows-standard.yml up --build",
    "test:emergency-node": "docker-compose -f test-environments/node-detection-failure.yml up --build",
    "validate:pre-publish": "node scripts/pre-publish-validate.js",
    "validate:full": "npm run validate:pre-publish && npm run test:integration && npm run test:verdaccio",
    "diagnose": "powershell -ExecutionPolicy Bypass -File test-environments/diagnose-environment.ps1",
    "diagnose:save": "powershell -ExecutionPolicy Bypass -File test-environments/diagnose-environment.ps1 -SaveToFile",
    "prepublishOnly": "npm run validate:pre-publish",
    "postinstall": "node scripts/postinstall.js",
    "prepare": "npm run build"
  },
  "bin": {
    "rough-cut-mcp": "./build/index.js",
    "rough-cut-setup": "./scripts/postinstall.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/RoughCut.git"
  },
  "author": "Your Name",
  "license": "MIT",
  "keywords": [
    "remotion",
    "mcp",
    "video",
    "ai",
    "creative",
    "elevenlabs",
    "freesound",
    "flux",
    "cross-platform",
    "windows",
    "macos",
    "claude-desktop",
    "model-context-protocol",
    "video-creation",
    "ai-video"
  ],
  "author": "endlessblink",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/endlessblink/rough-cut-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/endlessblink/rough-cut-mcp/issues"
  },
  "homepage": "https://github.com/endlessblink/rough-cut-mcp#readme",
  "files": [
    "build/",
    "scripts/check-platform.js",
    "install-to-claude.js",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "CLAUDE.md",
    "LAYERED-TOOLS-GUIDE.md"
  ],
  "dependencies": {
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@babel/types": "^7.28.2",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@remotion/bundler": "^4.0.0",
    "@remotion/cli": "^4.0.0",
    "@remotion/lambda": "^4.0.0",
    "@remotion/renderer": "^4.0.0",
    "axios": "^1.6.0",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.3.0",
    "elevenlabs": "^0.15.0",
    "fs-extra": "^11.2.0",
    "mime-types": "^2.1.35",
    "open": "^10.0.0",
