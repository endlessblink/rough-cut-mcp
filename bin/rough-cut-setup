#!/usr/bin/env node

/**
 * Global binary for remotion-mcp-setup command
 * Calls the setup.js script from the package installation
 */

const path = require('path');
const { spawn } = require('child_process');

// Find the package root directory (where this bin script is located)
const packageRoot = path.resolve(__dirname, '..');
const setupScript = path.join(packageRoot, 'scripts', 'setup.js');

// Forward all arguments to the setup script
const args = process.argv.slice(2);

// Spawn the setup script with proper stdio
const setupProcess = spawn(process.execPath, [setupScript, ...args], {
  stdio: 'inherit',
  cwd: process.cwd() // Use current working directory for project creation
});

setupProcess.on('exit', (code) => {
  process.exit(code || 0);
});

setupProcess.on('error', (error) => {
  console.error('Failed to run remotion-mcp-setup:', error.message);
  process.exit(1);
});