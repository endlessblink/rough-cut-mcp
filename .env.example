# Remotion Creative MCP Server Configuration
# Copy this file to .env and fill in your API keys

# Asset Storage Directory
REMOTION_ASSETS_DIR=./assets

# AI Service API Keys
# Get your ElevenLabs API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=

# Get your Freesound API key from: https://freesound.org/apiv2/apply/
FREESOUND_API_KEY=

# Get your Flux API key from: https://blackforestlabs.ai/
FLUX_API_KEY=

# Remotion Configuration
REMOTION_CONCURRENCY=1
REMOTION_TIMEOUT=30000

# File Management
CLEANUP_TEMP_FILES=true
MAX_ASSET_AGE_HOURS=24

# Logging
LOG_LEVEL=info
# LOG_FILE=./logs/mcp-server.log

# Optional: Custom API Endpoints (if using proxies or alternative endpoints)
# ELEVENLABS_API_ENDPOINT=https://api.elevenlabs.io/v1
# FLUX_API_ENDPOINT=https://api.bfl.ai/v1
